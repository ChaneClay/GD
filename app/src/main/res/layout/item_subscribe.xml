<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="200dp">


        <com.dgut.dg.Utils.RoundImageView
            android:id="@+id/iv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="128dp"
            android:src="@mipmap/head"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="2021-08-15"
            app:layout_constraintEnd_toEndOf="@+id/btn_order"
            app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintStart_toStartOf="@+id/btn_order"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="个人简介"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/iv_head"
            app:layout_constraintStart_toStartOf="@+id/iv_head"
            app:layout_constraintTop_toBottomOf="@+id/iv_head" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="3dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/tv_desc"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc" />

        <Button
            android:id="@+id/btn_order"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginStart="19dp"
            android:textColor="@color/white"
            android:text="预约时间"
            app:layout_constraintStart_toEndOf="@+id/tv_content"
            app:layout_constraintTop_toTopOf="@+id/tv_content" />

        <ImageView
            android:id="@+id/iv_chat"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_marginStart="47dp"
            android:layout_marginEnd="44dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_order"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_order"
            app:layout_constraintTop_toTopOf="@+id/btn_order"
            android:src="@mipmap/send_message" />

    </androidx.constraintlayout.widget.ConstraintLayout>

<!--    <TextView-->
<!--        android:id="@+id/name"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"/>-->



</LinearLayout>